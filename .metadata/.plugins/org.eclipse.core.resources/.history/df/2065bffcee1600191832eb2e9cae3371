package com.hb.practice;

import java.util.List;

import org.hibernate.Session;
import org.hibernate.SessionFactory;

import com.hb.practice.entity.Employee;

public class PracticeAppOne {

	public static void main(String[] args) {
		SessionFactory factory = new Configuration()
				.configure()
				.addAnnotatedClass(Employee.class)
				.buildSessionFactory();
		
		Session session = factory.openSession();
		
		Employee employee;
		
		try {
			session.beginTransaction();
			
			//add employee to table
			System.out.println("Addding employee: ");
			employee = new Employee("John", "Gotti", "Self Employeed");
			session.save(employee);
			
			//get employee from table
			System.out.println("Getting all employees: ");
			@SuppressWarnings
			List<Employee> employees = 
					session.createQuery("from Eployee").getResultList();
			for (Employee emp: employees) {
				System.out.println(emp);
			}
			
			//update employee in table
			
			//delete a employee from table
			
			session.getTransaction().commit();
			
		} finally {
			session.close();
			factory.close();
		}

	}

}
